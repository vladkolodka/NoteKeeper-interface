    <ControlTemplate x:Key="ClearBuuton" TargetType="{x:Type Button}">
        <Grid>
            <Ellipse x:Name="outerCircle" Width="30" Height="30">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="Cross.png" Stretch="Fill"></ImageBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Viewbox>
                <ContentControl Margin="30" Content="{TemplateBinding Content}"/>
            </Viewbox>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="outerCircle" Property="Fill">
                    <Setter.Value>
                        <ImageBrush TileMode="None" ImageSource="Cross.png" Stretch="Uniform" Opacity="0.5"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX=".9" ScaleY=".9"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="RenderTransformOrigin" Value=".5,.5"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
